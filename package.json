{
  "name": "koa-ts-rest-boilerplate",
  "version": "1.0.0",
  "description": "REST API server using NodeJS, Koa framework, Typescript, TypeORM.",
  "main": "server.ts",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build-ts": "tsc",
    "build": "yarn build-ts",
    "start": "node ./dist/src/server.js",
    "dev": "tsnd ./src/server.ts | pino-pretty",
    "test": "jest",
    "test:coverage": "jest --collect-coverage",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "koa",
    "boilerplate",
    "typeORM",
    "sql",
    "rest",
    "cors"
  ],
  "repository": "git@github.com:sede-x/koa-ts-rest-boilerplate.git",
  "author": "madhavkaneriya7 <madhav.kaneriya@shell.com>",
  "license": "MIT",
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.1",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "koa-helmet": "^7.0.2",
    "koa-jwt": "^4.0.4",
    "koa-pino-logger": "^4.0.0",
    "mssql": "^9.1.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.2",
    "@types/koa": "^2.13.6",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-pino-logger": "^3.0.1",
    "@types/koa__cors": "^4.0.0",
    "@types/koa__router": "^12.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.44.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
